# ── Kafka (Redpanda) ──────────────────────────────────
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=doc-parser-group
KAFKA_INPUT_TOPIC=pdf-incoming
KAFKA_OUTPUT_TOPIC=json-outgoing

# ── MinIO ─────────────────────────────────────────────
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=admin12345
MINIO_SECURE=false
MINIO_OUTPUT_BUCKET=processed-json-doc

# ── Обработка ─────────────────────────────────────────
TEMP_DIR=/tmp/doc-parser

# ── Логирование ───────────────────────────────────────
LOG_LEVEL=INFO
LOG_FORMAT=console